{
  "name": "rlg-cc-unleashed",
  "version": "2.1.0",
  "description": "Claude Code plugin with skills, commands, and chunked planning - agents now installed separately as standalone",
  "claudeCodeVersion": ">=2.0.31",
  "author": "RLGeeX",
  "repository": {
    "type": "git",
    "url": "https://github.com/rlgeex/rlg-cc-unleashed"
  },
  "agents": {
    "note": "Agents are now installed separately via rlg-cc-subagents repository. Install to ~/.claude/agents/cc-unleashed/ for auto-delegation support. See README.md for installation instructions."
  },
  "skills": {
    "workflows": {
      "path": "skills/workflows/",
      "skills": [
        "brainstorming",
        "test-driven-development",
        "systematic-debugging",
        "verification-before-completion",
        "using-git-worktrees",
        "receiving-code-review",
        "dispatching-parallel-agents",
        "condition-based-waiting",
        "defense-in-depth",
        "testing-anti-patterns",
        "subagent-driven-development",
        "root-cause-tracing",
        "finishing-a-development-branch"
      ]
    },
    "planning": {
      "path": "skills/planning/",
      "skills": [
        "write-plan",
        "execute-plan",
        "plan-manager"
      ]
    },
    "kubernetes": {
      "path": "skills/",
      "skills": [
        "gitops-workflow",
        "helm-chart-scaffolding",
        "k8s-manifest-generator",
        "k8s-security-policies"
      ]
    }
  },
  "commands": {
    "note": "Slash commands are automatically discovered from .md files in commands/ directory. Plugin name 'cc-unleashed' is prefixed to each command (e.g., dev.md becomes /cc-unleashed:dev). See docs/COMMANDS.md for full documentation."
  },
  "settings": {
    "plansDirectory": ".claude/plans",
    "maxChunkSize": 10,
    "contextBudget": 50000,
    "contextWarningThreshold": 40000,
    "contextCriticalThreshold": 45000,
    "autoUnloadIdleTime": 300000,
    "strictTDD": false
  },
  "metadata": {
    "tags": ["agents", "tdd", "planning", "orchestration", "context-management"],
    "license": "MIT",
    "keywords": [
      "claude-code",
      "plugin",
      "agents",
      "tdd",
      "planning",
      "orchestration",
      "chunked-plans",
      "context-management"
    ]
  }
}
